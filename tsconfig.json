{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["ESNext"],
    "types": ["jest"],
    "module": "commonjs",
    "moduleResolution": "node",
    "allowJs": true,
    "rootDir": ".",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "noImplicitAny": false
  },
  "include": ["src/**/*.ts", "env.d.ts", "src/types.d.ts"],
  "exclude": ["node_modules", "build", "**/*.spec.ts", "**/__test__"]
}
